<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view1"
        android:layout_width="187dp"
        android:layout_height="156dp"
        android:background="#C4C4C4"
        android:gravity="center"
        android:text="1"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="124dp"
        android:layout_height="156dp"
        android:layout_below="@+id/view1"
        android:layout_toRightOf="@+id/view1"
        android:background="#813434"
        android:gravity="center"
        android:text="2"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="187dp"
        android:layout_height="133dp"
        android:layout_below="@+id/view2"
        android:background="#F4B8B8"
        android:gravity="center"
        android:text="3"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/view"
        android:layout_width="144dp"
        android:layout_height="66dp"
        android:layout_above="@+id/view4"
        android:layout_toRightOf="@+id/view3"
        android:background="#C4C4C4"
        android:gravity="center" />

    <TextView
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="205dp"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/view"
        android:background="#312525"
        android:gravity="center"
        android:text="4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/view3"
        android:layout_alignRight="@id/view"
        android:layout_alignBottom="@id/view4"
        android:layout_toRightOf="@+id/view4"
        android:background="#2DB2CF"
        android:gravity="center"
        android:text="5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/view4"
        android:layout_alignRight="@id/view5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#151443"
        android:gravity="center"
        android:text="6"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/view5"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/view6"
        android:background="#4DC868"
        android:gravity="center"
        android:text=""
        android:textSize="30dp" />
</RelativeLayout>